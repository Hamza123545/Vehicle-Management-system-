@using VehicleInsurance.Models
@model Customer

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Customer Details";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Customer Details</h4>
                    <table class="table table-striped">
                        <tr>
                            <th>Customer ID</th>
                            <td>@Model.CustomerID</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@Model.CustomerName</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>@Model.Password</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Address Proof</th>
                            <td>@Model.AddressProof</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>@Model.CreatedAt.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th>Policies</th>
                            <td>
                                @if (Model.Policies != null && Model.Policies.Count > 0)
                                {
                                    <ul>
                                        @foreach (var policy in Model.Policies)
                                        {
                                           
                                                <p><strong>Policy Number :</strong> @policy.PolicyNumber</p>
                                                <p><strong>Vehicle Model :</strong> @policy.VehicleModel</p>
                                            <p><strong>Policy Date :</strong> @policy.PolicyDate.ToShortDateString()</p>
                                                <p><strong>Policy Duration :</strong> @policy.PolicyDuration year(s)</p>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p>No policies available.</p>
                                }
                            </td>
                        </tr>
                    </table>
                    <div class="mt-3">
                        <a href="@Url.Action("Show","Customer")" class="btn btn-light">Back to List</a>
                        <a href="@Url.Action("Edit", "Customer", new { id = Model.CustomerID })" class="btn btn-info">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
