@using VehicleInsurance.Models;
@model Customer

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Customer</h4>
                    <form asp-action="Edit" method="post" class="forms-sample">
                        <input type="hidden" value="@Model.CustomerID" name="CustomerID" />

                        <div class="form-group">
                            <label for="exampleInputUsername1">Customer Name</label>
                            <input type="text" value="@Model.CustomerName" name="CustomerName" class="form-control" id="exampleInputUsername1" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" value="@Model.Email" name="Email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" value="@Model.Password" name="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Address</label>
                            <input type="text" value="@Model.Address" name="Address" class="form-control" id="exampleInputAddress1" placeholder="Address">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Phone Number</label>
                            <input type="number" value="@Model.PhoneNumber" name="PhoneNumber" class="form-control" id="exampleInputPhone1" placeholder="PhoneNumber">
                        </div>
                        <div class="form-group">
                            <label for="AddressProof">Address Proof</label>
                            <input type="file" class="form-control" id="AddressProof" name="AddressProof" />
                            <small class="text-muted">Leave this blank to keep the current file: @Model.AddressProof</small>
                            <input type="hidden" name="ExistingAddressProof" value="@Model.AddressProof" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Role</label>
                            <input type="text" value="@Model.Role" name="Role" class="form-control" id="exampleInputPhone1" placeholder="PhoneNumber">
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Save Changes</button>
                        <a href="@Url.Action("show","customer")"  class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
