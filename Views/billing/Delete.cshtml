@model VehicleInsurance.Models.Billing

@{
    ViewData["Title"] = "Delete Billing";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this billing record?</h3>
<div>
    <h4>Billing</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.BillNumber)</dt>
        <dd>@Model.BillNumber</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.CustomerName)</dt>
        <dd>@Model.Customer.CustomerName</dd>

        <dt>@Html.DisplayNameFor(model => model.Policy.PolicyNumber)</dt>
        <dd>@Model.Policy.PolicyNumber</dd>

        <dt>@Html.DisplayNameFor(model => model.Vehicle.VehicleModel)</dt>
        <dd>@Model.Vehicle.VehicleModel</dd>

        <dt>@Html.DisplayNameFor(model => model.Amount)</dt>
        <dd>@Model.Amount</dd>

        <dt>@Html.DisplayNameFor(model => model.BillingDate)</dt>
        <dd>@Model.BillingDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BillID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Billing")" class="btn btn-secondary">Cancel</a>
</form>
