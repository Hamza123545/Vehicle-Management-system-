@using VehicleInsurance.Models
@model Estimate

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Estimate Details";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Estimate Details</h4>
                    <table class="table table-striped">
                        <tr>
                            <th>Estimate ID</th>
                            <td>@Model.EstimateId</td>
                        </tr>
                        <tr>
                            <th>Estimate Number</th>
                            <td>@Model.EstimateNumber</td>
                        </tr>
                        <tr>
                            <th>Customer Name</th>
                            <td>@Model.Customer?.CustomerName</td>
                        </tr>
                        <tr>
                            <th>Customer Phone Number</th>
                            <td>@Model.CustomerPhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Vehicle Name</th>
                            <td>@Model.VehicleName</td>
                        </tr>
                        <tr>
                            <th>Vehicle Model</th>
                            <td>@Model.VehicleModel</td>
                        </tr>
                        <tr>
                            <th>Vehicle Rate</th>
                            <td>@Model.VehicleRate</td>
                        </tr>
                        <tr>
                            <th>Vehicle Warranty</th>
                            <td>@Model.VehicleWarranty</td>
                        </tr>
                        <tr>
                            <th>Vehicle Policy Type</th>
                            <td>@Model.VehiclePolicyType</td>
                        </tr>
                    </table>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Estimate")" class="btn btn-light">Back to List</a>
                        <a href="@Url.Action("Edit", "Estimate", new { id = Model.EstimateId })" class="btn btn-info">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

