@using VehicleInsurance.Models
@model List<Policy>

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Policy Management";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">All Policies</h4>
                    <div class="table-responsive">
                        <a href="@Url.Action("Create", "Policy")" class="btn btn-primary">Create New Policy</a>
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th>Policy ID</th>
                                    <th>Policy Number</th>
                                    <th>Policy Date</th>
                                    <th>Policy Duration</th>
                                    <th>Customer Name</th>
                                    <th>Customer Phone Number</th>
                                    <th>Vehicle Name</th>
                                    <th>Vehicle Number</th>
                                    <th>Vehicle Rate</th>
                                    <th>Vehicle Warranty</th>
                                    <th>Vehicle Model</th>
                                    <th>Vehicle Version</th>
                                    <th>Address Proof</th>
                                    <th>Is Active</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var policy in Model)
                                {
                                    <tr>
                                        <td>@policy.PolicyID</td>
                                        <td>@policy.PolicyNumber</td>
                                        <td>@policy.PolicyDate.ToShortDateString()</td>
                                        <td>@policy.PolicyDuration</td>
                                        <td>@policy.Customer?.CustomerName</td>
                                        <td>@policy.Customer?.PhoneNumber</td>
                                        <td>@policy.Vehicle?.VehicleName</td>
                                        <td>@policy.Vehicle?.VehicleNumber</td>
                                        <td>@policy.Vehicle?.VehicleRate</td>
                                        <td>@policy.Vehicle?.VehicleWarranty</td>
                                        <td>@policy.Vehicle?.VehicleModel</td>
                                        <td>@policy.Vehicle?.VehicleVersion</td>
                                        <td>@policy.Customer?.AddressProof</td>
                                        <td>@(policy.IsActive ? "Yes" : "No")</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Policy", new { id = policy.PolicyID })" class="btn btn-secondary btn-sm">Details</a>
                                            <a href="@Url.Action("Edit", "Policy", new { id = policy.PolicyID })" class="btn btn-info btn-sm">Edit</a>
                                            <a href="@Url.Action("Delete", "Policy", new { id = policy.PolicyID })" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
